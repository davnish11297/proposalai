{
  "name": "proposalai",
  "version": "1.0.0",
  "description": "Smart Client Proposal & RFP Response Generator for B2B Teams",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "PORT=3001 nodemon --exec tsx src/server/index.ts",
    "dev:client": "cd client && PORT=3000 npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "cd src/server && node dist/index.js",
    "install:all": "npm install && cd client && npm install",
    "db:seed": "ts-node src/server/scripts/seed.ts",
    "start:client": "cd client && PORT=3000 npm start"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "keywords": [
    "proposal",
    "ai",
    "rfp",
    "b2b",
    "sales",
    "automation"
  ],
  "author": "ProposalAI Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/bcrypt": "^5.0.2",
    "@types/express-session": "^1.18.2",
    "@types/passport-google-oauth20": "^2.0.16",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pptxgenjs": "^3.12.0",
    "puppeteer": "^24.12.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2"
  }
}

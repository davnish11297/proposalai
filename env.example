# Database
DATABASE_URL="postgresql://username:password@localhost:5432/proposalai"

# Server
PORT=3000
NODE_ENV=development

# Client
CLIENT_BASE_URL=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# AI Providers
# Option 1: OpenRouter (Recommended - supports multiple AI models)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Option 2: Anthropic Claude (Direct)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Option 3: OpenAI (Direct)
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (Optional - for notifications)
# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=ProposalAI <noreply@proposalai.com>

# Option 2: SMTP (Alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
DISABLE_RATE_LIMITING_IN_DEV=true

# CORS
CORS_ORIGIN=http://localhost:3000

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Security
BCRYPT_ROUNDS=12 